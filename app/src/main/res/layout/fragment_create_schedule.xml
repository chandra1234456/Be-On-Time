<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1134"
    tools:context=".schedule.CreateScheduleFragment">

    <LinearLayout
        android:id="@+id/toolBarLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_arrow_back" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_check_box_new" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/ic_check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBarLL">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textColor="@color/white"
            android:textSize="21sp" />
        <!-- Meeting Title -->
        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:backgroundTint="#D0BFFF"
            android:hint="Title"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <!-- Fullday Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fullday"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchFullday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#D0BFFF"
                android:trackTint="#8866FF" />
        </LinearLayout>

        <!-- Start Time -->
        <include
            android:id="@+id/rowStartTime"
            layout="@layout/item_row_time" />

        <!-- Finish Time -->
        <include
            android:id="@+id/rowEndTime"
            layout="@layout/item_row_time" />

        <!-- Repeat -->
        <include
            android:id="@+id/rowRepeat"
            layout="@layout/item_row_text" />

        <!-- Reminder -->
        <include
            android:id="@+id/rowReminder"
            layout="@layout/item_row_text" />

        <!-- Location -->
        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input"
            android:backgroundTint="#D0BFFF"
            android:hint="Place"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <!-- Notes -->
        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:backgroundTint="#D0BFFF"
            android:hint="Notes"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>